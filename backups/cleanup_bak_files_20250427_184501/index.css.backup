@media (max-width: 640px) {
  .isolation-btn {
    width: 28px;
    height: 28px;
  }
  
  .isolation-btn.active {
    color: #0891b2;
    filter: drop-shadow(0 0 1px rgba(8, 145, 178, 0.6));
  }
}


@import url('https://fonts.googleapis.com/css2?family=PT+Sans+Narrow:wght@400;700&display=swap');

/* PERMANENT FIX FOR GREEN BACKGROUNDS - DO NOT REMOVE */
/* Remove all styles for expanded rows - we'll use the row background color instead */
/* Basic styles for all expanded item rows */
.expanded-item-row,
.expanded-item-row td,
.expanded-item-cell,
tr.expanded-item-row td,
tr.expanded-item-row td[style],
.material-column.expanded-item-cell,
.expanded-item-row td[style*="background"],
.sticky-header-table tr.expanded-item-row > td:not(:first-child),
.sticky-header-table tr.expanded-item-row td.material-column,
tbody tr.expanded-item-row td.material-column,
.material-column[style][className*="expanded-item-cell"] {
  /* Clear all background styles that might override our row styling */
  background: transparent !important;
  background-color: transparent !important;
  background-image: none !important;
}

/* Special styling for second and subsequent rows in expanded items */
tr.expanded-item-row:not(:first-of-type) td {
  z-index: 0 !important;
  position: relative !important;
  background-color: #e2e2e2 !important;
}

/* Also fix when this appears in a different context */
tr[class*="expanded-item"]:not(:first-of-type) td {
  z-index: 0 !important;
  position: relative !important;
}

/* Special handling for backgrounds in expanded rows */
/* For rows that need their background color intact */
.expanded-item-row div[style*="backgroundColor='#e2e2e2'"], 
.expanded-item-row div[style*="backgroundColor='#eaeaea'"] {
  background-color: #e2e2e2 !important;
}

/* Allow badge elements to keep their background colors */
span[style*="backgroundColor: '#000000'"],
span[style*="backgroundColor='#000000'"],
span[style*="backgroundColor: '#22c55e'"],
span[style*="backgroundColor='#22c55e'"],
span[style*="backgroundColor: '#ef4444'"],
span[style*="backgroundColor='#ef4444'"] {
  background-color: initial !important;
}

/* Global badge reset - no borders or shadows for any badges */
[data-instrument-type],
.instrument-type-INNATO,
.instrument-type-NATEY, 
.instrument-type-ZEN,
.instrument-type-DOUBLE,
.instrument-type-OVA,
.instrument-type-CARDS,
span[style*="backgroundColor"],
span[style*="background-color"],
div[style*="backgroundColor"], 
div[style*="background-color"] {
  border: none !important;
  box-shadow: none !important;
  font-weight: 700 !important;
}

/* Ensure frequency badges always keep their colors */
div[data-frequency="432"] {
  background-color: #22c55e !important;
  background: #22c55e !important;
  color: white !important;
  font-weight: 700 !important;
  border: none !important;
  box-shadow: none !important;
}

div[data-frequency="440"] {
  background-color: #ef4444 !important;
  background: #ef4444 !important;
  color: white !important;
  font-weight: 700 !important;
  border: none !important;
  box-shadow: none !important;
}

/* Ensure tuning note badges always show with medium gray background */
div[data-tuning-note] {
  background-color: #9ca3af !important; /* medium gray (gray-400) */
  background: #9ca3af !important;
  color: black !important;
  font-weight: 700 !important;
  border: none !important;
  box-shadow: none !important;
}

/* Only override certain divs, but not our badge divs */
.expanded-item-row div[style*="#e2e2e2"]:not([style*="border"]) {
  background-color: transparent !important;
  background: transparent !important;
}

/* IMPORTANT - Preserve instrument type colors in expanded rows */
/* 
 * ISSUE: In the second and subsequent rows of expanded multi-item orders, the instrument type badges
 * lose their background color. This happens because the expanded-item-row CSS class is overriding
 * the background styles of the type-color class.
 * 
 * FIX: Instead of using 'unset' (which removes all background styling), we need to ensure
 * the specific instrument type classes (.type-INNATO, .type-NATEY, etc.) are preserved
 * in the expanded rows by setting initial values that can be overridden by more specific selectors.
 */
.expanded-item-row .type-color,
.expanded-item-row td .type-color {
  /* Use initial instead of unset to allow more specific selectors to override */
  background-color: initial !important;
  background: initial !important;
}

/* Restore specific instrument color classes */
/* Instrument type colors with guaranteed white text */
.type-INNATO, .expanded-item-row .type-INNATO {
  background-color: #4f46e5 !important;
  color: white !important;
  font-weight: bold !important;
  text-shadow: 0px 0px 1px rgba(0,0,0,0.5) !important;
}

.type-NATEY, .expanded-item-row .type-NATEY {
  background-color: #f59e0b !important;
  color: white !important;
  font-weight: bold !important;
  text-shadow: 0px 0px 1px rgba(0,0,0,0.5) !important;
}

.type-DOUBLE, .expanded-item-row .type-DOUBLE {
  background-color: #8b5cf6 !important;
  color: white !important;
  font-weight: bold !important;
  text-shadow: 0px 0px 1px rgba(0,0,0,0.5) !important;
}

.type-ZEN, .expanded-item-row .type-ZEN {
  background-color: #0d9488 !important;
  color: white !important;
  font-weight: bold !important;
  text-shadow: 0px 0px 1px rgba(0,0,0,0.5) !important;
}

.type-OVA, .expanded-item-row .type-OVA {
  background-color: #ec4899 !important;
  color: white !important;
  font-weight: bold !important;
  text-shadow: 0px 0px 1px rgba(0,0,0,0.5) !important;
}

.type-CARDS, .expanded-item-row .type-CARDS {
  background-color: #f43f5e !important;
  color: white !important;
  font-weight: bold !important;
  text-shadow: 0px 0px 1px rgba(0,0,0,0.5) !important;
}


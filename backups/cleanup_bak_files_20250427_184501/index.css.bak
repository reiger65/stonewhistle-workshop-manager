@layer base {
  :root {
    --header-color: #015a6c;
    --header-text-color: #ffffff;
    --alternate-row-light: #F9FAFB;
    --alternate-row-dark: #F3F4F6;
    --material-column-color: rgba(241, 245, 249, 0.5);
    --status-column-color: rgba(245, 247, 250, 0.75);
    --separator-color: #e2e8f0;
    --accent-color: #015a6c;
    --font-family: inherit;
    --font-size: inherit;
    --cell-padding: 0.5rem 1rem;
  }
  
  * {
    @apply border-border;
  }

  body {
    @apply font-sans antialiased bg-background text-foreground;
    font-family: var(--font-family, inherit);
  }
  
  /* Themed table styles */
  .sticky-header-table th {
    background-color: var(--header-color);
    color: var(--header-text-color);
  }
  
  .sticky-header-table td:first-child,
  .sticky-header-table th:first-child {
    background-color: var(--header-color);
    color: var(--header-text-color);
    font-family: 'PT Sans Narrow', sans-serif !important;
    font-size: 14pt !important;
    font-weight: 700 !important;
    letter-spacing: 0 !important;
  }
  
  /* Alternating row colors - but exclude multi-item rows which have their own styling */
  .order-row:not(.multi-item-row):nth-child(odd) > td {
    background-color: var(--alternate-row-light) !important;
  }
  
  .order-row:not(.multi-item-row):nth-child(even) > td {
    background-color: var(--alternate-row-dark) !important;
  }
  
  .status-column-group {
    background-color: var(--status-column-color) !important;
  }
  
  /* Override status columns for multi-item rows */
  .multi-item-row td.status-column-group {
    background-color: #eaeaea !important;
  }
  
  /* For expanded items, ensure the right background */
  .expanded-item-row td.status-column-group {
    background-color: #e2e2e2 !important;
  }
  
  .order-row:not(.multi-item-row):not(.expanded-item-row) .material-column {
    background-color: var(--material-column-color) !important;
  }
  
  .status-group-column {
    border-left: 1px solid var(--separator-color);
  }
  
  /* Apply font size if theme specifies it */
  .sticky-header-table td,
  .sticky-header-table th {
    font-size: var(--font-size, inherit);
    padding: var(--cell-padding, 0.5rem 1rem);
  }
}

/* Final overrides - these should be the absolute last rules to take precedence over everything */
.sticky-header-table tr td:first-child,
.sticky-header-table tr.order-row td:first-child,
.sticky-header-table tr.multi-item-row td:first-child,
.sticky-header-table tr.expanded-item-row td:first-child,
.completed-table tr.data-row td:first-child,
.completed-table tr.multi-item-row td:first-child,
.completed-table tr.expanded-item-row td:first-child,
tr.multi-item-row > td:first-child,
tr.expanded-item-row > td:first-child {
  background-color: #015a6c !important;
  background: #015a6c !important;
  color: #ffffff !important;
  font-family: 'PT Sans Narrow', sans-serif !important;
  font-size: 14pt !important;
  font-weight: 700 !important;
}

/* Additional override for bag/box columns in multi-item rows */
tr.multi-item-row > td.bag-ready-cell,
tr.multi-item-row > td.box-ready-cell,
tr.multi-item-row > td[style*="background"] {
  background-color: #eaeaea !important;
  background: #eaeaea !important;
}

tr.expanded-item-row > td.bag-ready-cell,
tr.expanded-item-row > td.box-ready-cell,

  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
}

/* Ensure all checkboxes in tables are properly centered */
.sticky-header-table td [role="checkbox"] {
  margin: 0 auto !important;
}

/* Status column styling */

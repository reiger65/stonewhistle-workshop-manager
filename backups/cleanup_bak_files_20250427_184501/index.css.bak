/* Generic box sizes (fallback) */
.box-small {
  @apply bg-gray-500 text-white;
}

.box-medium {
  @apply bg-gray-600 text-white;
}

.box-large {
  @apply bg-gray-700 text-white;
}

/* Custom checkbox styling for worksheet */
.checkbox-sm-auto {
  @apply bg-gray-200 border-gray-400 !important;
}

.checkbox-sm-auto[data-state="checked"] {
  @apply bg-gray-500 border-gray-600 !important;
}

.checkbox-dry {
  @apply border-orange-500 border-2 !important;
}

.checkbox-dry[data-state="checked"] {
  @apply bg-orange-500 text-white !important;
}

/* Use more specific selectors to ensure they override default styles */
div[data-state="unchecked"].checkbox-sm-auto {
  background-color: #e5e7eb !important;
  border-color: #9ca3af !important;
  margin: 0 auto !important;
}

div[data-state="checked"].checkbox-sm-auto {
  background-color: #6b7280 !important;
  border-color: #4b5563 !important;
  margin: 0 auto !important;
}

div[data-state="unchecked"].checkbox-dry {
  border-color: #f97316 !important;
  border-width: 2px !important;
  margin: 0 auto !important;
}

div[data-state="checked"].checkbox-dry {
  background-color: #f97316 !important;
  color: white !important;
  margin: 0 auto !important;
}


  margin: 0 auto !important;
}

/* Ensure table cells with checkboxes have proper spacing */
.sticky-header-table td {
  padding: 8px 4px !important;
  text-align: center !important;
  vertical-align: middle !important;
}

/* Create checkbox wrapper for consistent alignment */
.checkbox-wrapper {
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  position: relative !important;
  width: 100% !important;
  height: 100% !important;
}

/* Make checkboxes consistent size */
[role="checkbox"] {
  width: 28px !important;
  height: 28px !important;
  margin: 0 auto !important;
}

/* Z-index fixes for expanded multi-item orders */
.order-number-cell {
  position: sticky;
  left: 0;
  z-index: 30 !important;
}

/* Multi-item order styling - Clean and minimal approach */
.multi-item-row > td:not(:first-child) {
  background-color: #eaeaea !important; /* Light gray background for multi-item rows */
  border: none !important;
}

/* Expanded multi-item rows get slightly darker */
.expanded-item-row > td:not(:first-child) {
  background-color: #e2e2e2 !important; /* Slightly darker gray for expanded items */
  border: none !important;
}

/* Individual expanded cells */
.expanded-item-cell {
  background-color: #e2e2e2 !important; /* Slightly darker gray for expanded items */
  border: none !important;
}

/* Order row styling - structure and organization */
.order-row {
  border-bottom: 1px solid #e5e7eb;
  position: relative;
}

.order-row:first-child {
  border-top: 2px solid var(--separator-color);
}

.order-row:last-child {
  border-bottom: 2px solid var(--separator-color);
}

/* Regular order row styling with alternating colors */
tr.order-row:not(.expanded-item-row) {
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.03);
}

/* Make sure all first columns preserve styling */
.sticky-header-table td:first-child,
.expanded-item-row > td:first-child {
  background-color: var(--header-color) !important;
  color: var(--header-text-color) !important;
  font-family: 'PT Sans Narrow', sans-serif !important;
  font-size: 14pt !important;
  font-weight: 700 !important;
  z-index: 20 !important;
}

/* Multi-item expanded rows */
.expanded-item-row {
  position: relative;
}

.expanded-item-row > td {
  position: relative;
  z-index: 10;
}

/* Prevent first column overlay */
.expanded-item-row > td:first-child::before {
  display: none;
}

/* Subtle indicator for alternating column groups */
tr th:nth-child(3n+1) {
  border-left: 1px dashed #d1d5db;
}

/* Add column group indicators - only for non-multi-item rows */
.order-row:not(.multi-item-row):not(.expanded-item-row) .material-column {
  background-color: rgba(241, 245, 249, 0.5) !important;
}

/* Override material column background for multi-item rows - with greater specificity */
.multi-item-row > td.material-column {
  background-color: #eaeaea !important;
}

/* For expanded items, ensure the right background - with greater specificity */
.expanded-item-row > td.material-column {
  background-color: #e2e2e2 !important;
}

/* SIMPLIFIED STYLING FOR MULTI-ITEM ROWS */
/* For multi-item rows */
tr.multi-item-row td {
  background-color: #eaeaea !important;
}

/* For expanded item rows */
tr.expanded-item-row td {
  background-color: #e2e2e2 !important;
}

/* First column styling for all rows */
tr td:first-child,
tr.order-row td:first-child,
tr.multi-item-row td:first-child,
tr.expanded-item-row td:first-child {
  background: #015a6c !important;
  background-color: #015a6c !important;
  color: white !important;

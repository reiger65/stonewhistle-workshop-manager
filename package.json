{
  "name": "stonewhistle-workshop-manager",
  "version": "1.0.1",
  "description": "Stonewhistle Workshop Manager - Fast, optimized version",
  "main": "server/index.ts",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "tsx server/index.ts",
    "client": "vite",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build",
    "build:server": "tsc server/*.ts --outDir dist/server --target es2020 --module commonjs --esModuleInterop --skipLibCheck --declaration false",
    "start": "node dist/server/index.js",
    "deploy": "npm run build && npm start"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "drizzle-orm": "^0.36.0",
    "drizzle-kit": "^0.25.0",
    "date-fns": "^2.30.0",
    "node-fetch": "^3.3.2",
    "ws": "^8.14.2",
    "concurrently": "^8.2.2",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/pg": "^8.10.9",
    "@types/ws": "^8.5.10",
    "@types/node": "^20.10.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "vite": "^5.0.0",
    "@vitejs/plugin-react": "^4.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}